<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="co.crowde.toni">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.login.OpenShop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.notification.TransactionSuccess"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.notification.ProductAddSuccess"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.notification.PrintLoading"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.notification.PrintSuccess"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.notification.PaymentSuccess"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.main.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
        <activity
            android:name=".view.login.LoginSuccess"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.login.Login"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.main.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>