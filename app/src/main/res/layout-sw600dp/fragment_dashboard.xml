<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:paddingStart="4dp"
    android:paddingLeft="4dp"
    android:paddingTop="8dp"
    android:paddingEnd="4dp"
    android:paddingRight="4dp"
    android:paddingBottom="4dp"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".view.fragment.Dashboard">


    <EditText
        android:id="@+id/etSearchProduct"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorWhite"
        android:drawablePadding="4dp"
        android:hint="@string/cari_barang"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:maxLength="20"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="4dp"
        android:paddingRight="4dp"
        app:layout_constraintBottom_toTopOf="@id/view2"
        app:layout_constraintEnd_toStartOf="@+id/view1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view1"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/colorThemeGreyLight"
        app:layout_constraintBottom_toBottomOf="@+id/etSearchProduct"
        app:layout_constraintEnd_toStartOf="@+id/imgBtnFilter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/etSearchProduct"
        app:layout_constraintTop_toTopOf="@+id/etSearchProduct" />

    <ImageView
        android:id="@+id/imgBtnFilter"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/etSearchProduct"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/line07"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view1"
        app:layout_constraintTop_toTopOf="@+id/etSearchProduct"
        app:srcCompat="@drawable/ic_tune_black_24dp" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorThemeGreyLight"
        app:layout_constraintBottom_toTopOf="@+id/rcProduct"
        app:layout_constraintEnd_toStartOf="@+id/line07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSearchProduct" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcProduct"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/line07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <android.support.v7.widget.CardView
        android:id="@+id/cvCustomer"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/line07"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/colorThemeGreen"
        app:cardCornerRadius="10dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvChooseCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pilih_pelanggan"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="20sp"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="24sp"
                app:autoSizeMinTextSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/imgChooseCustomer"
                app:layout_constraintEnd_toStartOf="@+id/imgChooseCustomer"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imgChooseCustomer" />

            <ImageView
                android:id="@+id/imgChooseCustomer"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tvChooseCustomer"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_check_box_outline_blank_white_24dp" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cvCart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/colorThemeWhite"
        app:layout_constraintBottom_toTopOf="@+id/cvPay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/line07"
        app:layout_constraintTop_toBottomOf="@+id/cvCustomer">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="4dp"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="4dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcCart"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toTopOf="@+id/viewTotal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/belum_ada_barang"
                android:textColor="@color/colorThemeGreyDark"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/tvEmptyDesc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tvEmptyDesc"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:text="@string/ket_blm_ada_barang"
                android:textColor="@color/colorThemeGreyDark"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/viewTotal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEmpty" />

            <View
                android:id="@+id/viewTotal"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorThemeGrey"
                app:layout_constraintBottom_toTopOf="@+id/llTotalCart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:id="@+id/llTotalCart"
                android:layout_width="0dp"
                android:layout_height="?actionBarSize"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal"
                android:weightSum="5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/tvTotalLabel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="@string/total_kapital"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:layout_editor_absoluteX="28dp" />

                <TextView
                    android:id="@+id/tvTotalQty"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|end"
                    android:paddingEnd="8dp"
                    android:paddingRight="8dp"
                    android:text="0"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="16sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeTextType="uniform"
                    tools:layout_editor_absoluteX="115dp"
                    tools:layout_editor_absoluteY="411dp" />

                <TextView
                    android:id="@+id/tvTotalAmount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:gravity="center|start"
                    android:paddingStart="8dp"
                    android:paddingLeft="8dp"
                    android:text="Rp.0"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="16sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeTextType="uniform"
                    tools:layout_editor_absoluteX="209dp"
                    tools:layout_editor_absoluteY="411dp" />

            </LinearLayout>

            <android.support.constraint.Group
                android:id="@+id/emptyGroup"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                app:constraint_referenced_ids="tvEmpty,tvEmptyDesc"
                app:layout_constraintBottom_toTopOf="@+id/viewTotal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="visible"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cvPay"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/line07"
        app:cardBackgroundColor="@color/colorThemeOrange"
        app:cardCornerRadius="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/bayar"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"/>

    </android.support.v7.widget.CardView>

    <android.support.constraint.Guideline
        android:id="@+id/line07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />


</android.support.constraint.ConstraintLayout>