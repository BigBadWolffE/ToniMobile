<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/tv_transaction_customer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Baskoro Sebastian"
        android:textColor="@color/TextColorDefault"
        app:layout_constraintBottom_toTopOf="@+id/tv_transaction_amount"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_transaction_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="3 April 2019"
        android:textColor="@color/TextColorDefault"
        app:layout_constraintBottom_toTopOf="@+id/tv_transaction_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_transaction_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rp. 500.000,-"
        android:textColor="@color/TextColorDefault"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_transaction_customer_name"
        app:layout_constraintStart_toStartOf="@+id/tv_transaction_customer_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_transaction_customer_name" />

    <TextView
        android:id="@+id/tv_transaction_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ID: TR100"
        android:textColor="@color/colorThemeOrange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_transaction_date"
        app:layout_constraintStart_toStartOf="@+id/tv_transaction_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_transaction_date" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>