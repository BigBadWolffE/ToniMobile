<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_list"
        app:cardBackgroundColor="@color/colorThemeWhite"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/bg_white_transparent">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:gravity="center"
                    android:id="@+id/namapelanggantransaksiwaktu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="12dp"
                    android:padding="7dp"
                    android:textColor="@color/colorBlack"
                    />

                <TextView
                    android:gravity="center"
                    android:id="@+id/totaltransaksipelangganwaktu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp.10.000.000"
                    android:textSize="12dp"
                    android:padding="7dp"
                    android:textColor="@color/colorBlack"/>


            </LinearLayout>

            <LinearLayout
                android:gravity="left"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:gravity="center"
                    android:id="@+id/transaksitanggalpelangganwaktu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rabu, 3 Januari 2019"
                    android:textSize="12dp"
                    android:padding="7dp"
                    android:textColor="@color/colorBlack"
                    />

                <TextView
                    android:gravity="center"
                    android:padding="7dp"
                    android:textColor="@color/colorThemeOrange"
                    android:id="@+id/idtransaksipelanggan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="ID Transaksi #00004"/>

            </LinearLayout>


        </LinearLayout>




    </android.support.v7.widget.CardView>



</RelativeLayout>