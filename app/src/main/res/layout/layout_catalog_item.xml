<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutProductInventory"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:weightSum="3"
    android:padding="4dp"
    android:background="@color/colorWhite">

    <CheckBox
        android:id="@+id/checkProduct"
        android:layout_width="0dp"
        android:layout_weight="0.25"
        android:layout_height="match_parent"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.1"
        android:paddingRight="4dp"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tvTabProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/TextColorDefault"
            android:textSize="12sp"
            android:ellipsize="end"
            android:textStyle="bold"
            android:maxLines="1"
            tools:ignore="SmallSp" />
        <TextView
            android:id="@+id/tvTabProductUnit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/TextColorDefault"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="12sp"
            tools:ignore="SmallSp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvTabProductCategory"
        android:paddingRight="4dp"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.55"
        android:gravity="center"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="12sp"
        app:autoSizeMinTextSize="8sp"
        android:ellipsize="end"
        android:maxLines="2"
        tools:ignore="SmallSp"
        android:textColor="@color/TextColorDefault"
        />
    <TextView
        android:id="@+id/tvTabProductSupplier"
        android:layout_width="0dp"
        android:paddingRight="4dp"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:layout_height="match_parent"
        android:layout_weight="1.1"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="12sp"
        tools:ignore="SmallSp"
        android:textColor="@color/TextColorDefault"/>

</LinearLayout>